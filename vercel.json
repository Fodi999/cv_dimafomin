{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "cv-dimafomin.vercel.app"
        }
      ],
      "destination": "https://dima-fomin.pl/$1",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "cv-dimafomin-.*\\.vercel\\.app"
        }
      ],
      "destination": "https://dima-fomin.pl/$1",
      "permanent": true
    }
  ]
}
